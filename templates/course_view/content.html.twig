{% extends 'base.html.twig' %}

{% block title %}Course Details{% endblock %}

{% block body %}
    <div style="max-width: 700px; margin: 40px auto;">
        <a href="{{ path('user_dashboard') }}" style="display: inline-block; margin-bottom: 20px; text-decoration: none; color: #2563eb; font-weight: bold;">
            ← Back to Dashboard
        </a>

        <div style="padding: 30px; border: 1px solid #ccc; border-radius: 8px; background-color: #f9f9f9;">
            <h2 style="margin-bottom: 20px;">📘 {{ course.name }}</h2>
            <p style="font-size: 16px; line-height: 1.6; margin-bottom: 15px;">{{ course.description }}</p>

            <p><strong>Instructor:</strong> {{ course.instructor }}</p>
            <p><strong>Duration (in weeks) :</strong> {{ course.duration }} </p>
        </div>
    </div>
{% endblock %}
