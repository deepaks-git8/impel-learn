<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">

    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}

    <style>
        nav {
            background-color: #343a40;
            padding: 15px;
        }
        nav a {
            color: white;
            margin-right: 15px;
            text-decoration: none;
            padding: 8px 12px;
            border-radius: 4px;
        }
        nav a:hover {
            background-color: #495057;
        }
    </style>
</head>

<body>
<nav>
    {% if app.user %}
        <a href="{{ path('user_dashboard') }}">📚 My Dashboard</a>
        <a href="{{ path('app_course_view') }}">🎒 Browse Courses</a>

{#        {% if is_granted('ROLE_ADMIN') %}#}
{#            <a href="{{ path('app_admin') }}" style="background-color: #28a745;">🛠️ Manage Courses</a>#}
{#        {% endif %}#}

        <a href="{{ path('app_logout') }}" style="background-color: #dc3545;">Logout</a>
    {% else %}
        <a href="{{ path('app_login') }}" style="background-color: #007bff;">Login</a>
        <a href="{{ path('app_register') }}">Register</a>

    {% endif %}
</nav>

{% block body %}{% endblock %}
</body>
</html>
