{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <style>
        .register-container {
            max-width: 400px;
            margin: 3em auto;
            padding: 2em;
            border-radius: 8px;
            background-color: #f9f9f9;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            font-family: sans-serif;
        }

        .register-container h1 {
            text-align: center;
            margin-bottom: 1.5em;
        }

        .form-group {
            margin-bottom: 1em;
        }

        .form-group label {
            display: block;
            margin-bottom: 0.4em;
            font-weight: bold;
        }

        .form-group input {
            width: 100%;
            padding: 0.6em;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        .form-group + .form-group {
            margin-top: 1.2em;
        }

        .error-message {
            background-color: #f8d7da;
            color: #842029;
            padding: 10px;
            border: 1px solid #f5c2c7;
            border-radius: 5px;
            margin-bottom: 1em;
        }

        button {
            width: 100%;
            background-color: #007bff;
            color: white;
            padding: 0.7em;
            border: none;
            border-radius: 5px;
            font-size: 1em;
            cursor: pointer;
        }

        button:hover {
            background-color: #0056b3;
        }
    </style>

    <div class="register-container">
        <h1>üìù Register</h1>

        {{ form_start(registrationForm) }}

        <div class="form-group">
            {{ form_label(registrationForm.email) }}
            {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(registrationForm.plainPassword.first, 'Password') }}
            {{ form_widget(registrationForm.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(registrationForm.plainPassword.second, 'Confirm Password') }}
            {{ form_widget(registrationForm.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
        </div>

{#        <div>#}
{#            {{ form_errors(registrationForm.plainPassword.first) }}#}
{#        </div>#}
        <div style="color: red; font-size: 0.9rem;">
            {{ form_errors(registrationForm.plainPassword.first) }}
            {{ form_errors(registrationForm.email) }}
        </div>

        <button type="submit">Register</button>

        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
