{% extends 'base.html.twig' %}

{% block title %}Admin Panel - Manage Courses{% endblock %}

{% block body %}
    <style>
        .admin-wrapper {
            margin: 2em auto;
            max-width: 800px;
            width: 95%;
            font-family: sans-serif;
        }
        .admin-card {
            background: #f8f9fa;
            border: 1px solid #dee2e6;
            border-radius: 8px;
            padding: 20px;
            margin-bottom: 20px;
        }
        .admin-card h2 {
            margin-bottom: 10px;
        }
        .btn {
            padding: 8px 16px;
            border-radius: 5px;
            text-decoration: none;
            color: white;
            margin-right: 10px;
        }
        .btn-add { background-color: #28a745; }
        .btn-edit { background-color: #007bff; }
        .btn-delete { background-color: #dc3545; opacity: 0.5; cursor: not-allowed; }
    </style>

    <div class="admin-wrapper">
        <div class="admin-card">
            <h2>📚 Course Management</h2>
            <p>Manage your platform’s course catalog.</p>

            <div style="margin-top: 20px;">
                <a href="{{ path('app_add_course') }}" class="btn btn-add">➕ Add Course</a>
                <a  class="btn btn-edit" title="Edit functionality coming soon">✏️ Edit Course</a>
                <a class="btn btn-delete" title="Delete functionality coming soon">🗑️ Delete Course</a>
            </div>
        </div>
    </div>
{% endblock %}
