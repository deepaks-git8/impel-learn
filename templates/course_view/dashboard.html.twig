{% extends 'base.html.twig' %}

{% block title %}My Dashboard{% endblock %}

{% block body %}
    <div style="max-width: 1000px; margin: auto; padding: 20px;">
        <h1 style="margin-bottom: 30px;">ğŸ“ Welcome, {{ app.user.email }}</h1>

        <h2>My Enrolled Courses</h2>

        <form method="get" action="{{ path('user_dashboard') }}" style="margin-bottom: 20px;">
            <label for="sort">Sort By:</label>
            <select name="sort" id="sort" onchange="this.form.submit()">
                <option value="">-- Select --</option>
                <option value="name_asc" {{ app.request.get('sort') == 'name_asc' ? 'selected' : '' }}>Name (Aâ€“Z)</option>
                <option value="name_desc" {{ app.request.get('sort') == 'name_desc' ? 'selected' : '' }}>Name (Zâ€“A)</option>
                <option value="recent" {{ app.request.get('sort') == 'recent' ? 'selected' : '' }}>Recently Added</option>
                <option value="oldest" {{ app.request.get('sort') == 'oldest' ? 'selected' : '' }}>Oldest First</option>
            </select>
        </form>

        {% set activeEnrollments = enrollments|filter(e => e.courseDeletedAt is null) %}
        {% set sort = app.request.get('sort') %}

        {% if sort == 'name_asc' %}
            {% set activeEnrollments = activeEnrollments|sort((a, b) => a.courseName <=> b.courseName) %}
        {% elseif sort == 'name_desc' %}
            {% set activeEnrollments = activeEnrollments|sort((a, b) => b.courseName <=> a.courseName) %}
        {% elseif sort == 'recent' %}
            {% set activeEnrollments = activeEnrollments|sort((a, b) => b.courseId <=> a.courseId) %}
        {% elseif sort == 'oldest' %}
            {% set activeEnrollments = activeEnrollments|sort((a, b) => a.courseId <=> b.courseId) %}
        {% endif %}

        {% if activeEnrollments is empty %}
            <div style="margin-top: 20px; color: gray;">
                You havenâ€™t enrolled in any courses yet. Go to the
                <a href="{{ path('app_course_view') }}">Course Catalog</a> to explore.
            </div>
        {% else %}
            <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(250px, 1fr)); gap: 20px; margin-top: 20px;">
                {% for enrollment in activeEnrollments %}
                    <div style="border: 1px solid #ccc; padding: 15px; border-radius: 8px; background-color: #f9f9f9;">
                        <h3>{{ enrollment.courseName }}</h3>

                        <a href="{{ path('app_course_content', { id: enrollment.courseId }) }}" style="display: inline-block; margin-top: 10px; color: #0056b3;">
                            ğŸ” View Course
                        </a>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
{% endblock %}
